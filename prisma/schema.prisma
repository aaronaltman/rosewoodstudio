// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Posts {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  content       String
  featuredImage String?
  categoryId    String?   @db.ObjectId // Add this line
  category      Category? @relation(fields: [categoryId], references: [id]) // Correct this line
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  tag           Tag?      @relation(fields: [id], references: [id])
  user          User?     @relation(fields: [id], references: [id])

  @@map("posts")
}

model Pages {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  content       String
  featuredImage String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User?    @relation(fields: [id], references: [id])

  @@map("pages")
}

model Category {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  name  String  @unique
  posts Posts[]

  @@map("categories")
}

model Tag {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  name  String  @unique
  posts Posts[]

  @@map("tags")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  clerkId   String   @unique // A unique identifier from Clerk
  name      String? // Optional: For storing names if you use them in your app
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships to other models (if necessary)
  posts Posts[]
  pages Pages[]
  // Add other relations here, e.g., comments: Comment[]

  @@map("users")
}
