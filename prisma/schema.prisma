// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Posts {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  title   String
  content String
  clerkId String @db.ObjectId
  user    Users  @relation(fields: [clerkId], references: [id])

  @@map("posts")
}

model Users {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  email   String
  posts   Posts[]
  clerkId String  @db.ObjectId

  @@map("users")
}
